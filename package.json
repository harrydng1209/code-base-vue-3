{
  "name": "codebase-vue",
  "description": "This template will help you get started with Vue in Vite",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "main": "src/main.ts",
  "author": {
    "name": "HXRRY",
    "email": "harrydng1209@gmail.com",
    "url": "https://github.com/harrydng1209"
  },
  "engines": {
    "node": ">= 22",
    "pnpm": ">= 10",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm",
    "bun": "please-use-pnpm"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "format": "prettier . --write",
    "lint": "eslint . --fix",
    "type-check": "vue-tsc --build --force",
    "check-all": "run-p format lint type-check",
    "preinstall": "npx -y only-allow pnpm",
    "prepare": "husky",
    "precommit": "lint-staged && validate-branch-name"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "pnpm run format",
      "pnpm run lint",
      "git add ."
    ]
  },
  "validate-branch-name": {
    "pattern": "^(feature|bugfix|hotfix|release)/.+|(master)$"
  },
  "dependencies": {
    "@casl/ability": "^6.7.2",
    "@casl/vue": "^2.2.2",
    "@vee-validate/yup": "^4.13.2",
    "@vueuse/core": "^12.5.0",
    "@vueuse/shared": "^12.5.0",
    "axios": "^1.7.7",
    "dayjs": "^1.11.13",
    "element-plus": "^2.8.5",
    "lodash-es": "^4.17.21",
    "pinia": "^2.1.7",
    "qs": "^6.13.0",
    "string-template": "^1.0.0",
    "tippy.js": "^6.3.7",
    "uuid": "^11.0.3",
    "vee-validate": "^4.13.2",
    "vue": "^3.4.29",
    "vue-i18n": "^10.0.4",
    "vue-router": "^4.3.3",
    "vue-tippy": "^6.4.4",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.18.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.14.5",
    "@types/qs": "^6.9.16",
    "@types/string-template": "^1.0.6",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-perfectionist": "^4.6.0",
    "eslint-plugin-vue": "^9.32.0",
    "globals": "^15.14.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "npm-run-all2": "^6.2.0",
    "postcss": "^8.4.47",
    "prettier": "^3.4.2",
    "sass": "1.77.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.19.1",
    "unplugin-auto-import": "^0.18.3",
    "unplugin-vue-components": "^0.27.4",
    "validate-branch-name": "^1.3.1",
    "vite": "^5.3.1",
    "vite-plugin-vue-devtools": "^7.3.1",
    "vite-svg-loader": "^5.1.0",
    "vue-tsc": "^2.2.0"
  }
}
